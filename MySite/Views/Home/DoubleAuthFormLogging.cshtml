@model Log
@{
	Layout = null;
}
@{
    var email = TempData["logEmail"] as string;
    var password = TempData["password"] as string;
}

<form class="form-login" method="post" asp-contoller="Home" asp-action="VerifyCode" asp-route-Email ="@email" asp-rout-Password ="@password">
    <img class="mb-4" src="~/css/assets/brand/maxresdefault.svg" alt="" width="72" height="57">
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

    <div class="form-floating">
        <input asp-for="Code" class="form-control">
        <label asp-for="Code">2FAcode</label>
    </div>
    

    <div class="form-check text-start my-3">
        <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
        <label class="form-check-label" for="flexCheckDefault">
            Remember me
        </label>
    </div>
    <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>

</form>
