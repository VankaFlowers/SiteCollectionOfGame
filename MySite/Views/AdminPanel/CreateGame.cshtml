@model AdminEditModel
@{
    Layout = null;
}
@{
    ViewData["Title"] = "Create Game";
}

<h2>Create Game</h2>

<form asp-action="CreateGame" asp-controller="AdminPanel" method="post">
    <div class="form-group">
        <label asp-for="GameName"></label>
        <input asp-for="GameName" class="form-control" />
        <span asp-validation-for="GameName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GenreName"></label>
        <input asp-for="GenreName" class="form-control" />
        <span asp-validation-for="GenreName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>